{
  "name": "javelin",
  "private": true,
  "license": "MIT",
  "author": "Eric McDaniel <eric.g.mcdaniel@gmail.com>",
  "description": "Monorepo for Javelin â€“ a toolkit for building multiplayer games in JavaScript",
  "dependencies": {
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.3",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.4"
  },
  "repository": "git@github.com:3mcd/javelin",
  "scripts": {
    "docs": "yarn docs:assets && cd ./docs-src && ./zola serve",
    "docs:build": "yarn docs:assets && cd ./docs-src && ./zola build --output-dir ../docs",
    "docs:assets": "cp -r ./examples/interop/dist/assets/. ./docs-src/static",
    "test": "jest",
    "perf": "lerna run perf",
    "build": "yarn run build:core && yarn run build:ecs && yarn run build:hrtime-loop && yarn run build:net && yarn run build:pack && yarn run build:example:networking",
    "build:core": "lerna run build --scope=@javelin/core",
    "build:ecs": "lerna run build --scope=@javelin/ecs",
    "build:hrtime-loop": "lerna run build --scope=@javelin/hrtime-loop",
    "build:net": "lerna run build --scope=@javelin/net",
    "build:pack": "lerna run build --scope=@javelin/pack",
    "build:example:networking": "lerna run build --scope=@javelin/example-networking",
    "start:example:networking": "lerna run start --scope=@javelin/example-networking --stream",
    "bump": "lerna version --no-git-tag-version",
    "bump:patch": "lerna version patch --no-git-tag-version",
    "bump:minor": "lerna version minor --no-git-tag-version",
    "bump:major": "lerna version major --no-git-tag-version",
    "example:spin": "yarn start --filter=@javelin/spin",
    "example:interop": "yarn start --filter=@javelin/interop"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "version": "0.0.1"
}
