  "license": "MIT",
  "author": "Eric McDaniel <eric.g.mcdaniel@gmail.com>",
  "description": "Monorepo for Javelin â€“ a toolkit for building multiplayer games in JavaScript",
  "dependencies": {
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.3",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.4"
  },
  "repository": "git@github.com:3mcd/javelin",
  "scripts": {
    "docs": "yarn docs:assets && cd ./docs-src && ./zola serve",
    "docs:build": "yarn docs:assets && cd ./docs-src && ./zola build --output-dir ../docs",
    "docs:assets": "cp -r ./examples/interop/dist/assets/. ./docs-src/static",
    "test": "jest",
    "perf": "lerna run perf",
    "build": "yarn run build:core && yarn run build:ecs && yarn run build:hrtime-loop && yarn run build:net && yarn run build:pack && yarn run build:example:spin && yarn run build:example:interop",
    "build:core": "yarn workspace @javelin/core run build",
    "build:ecs": "yarn workspace @javelin/ecs run build",
    "build:hrtime-loop": "yarn workspace @javelin/hrtime-loop run build",
    "build:net": "yarn workspace @javelin/net run build",
    "build:pack": "yarn workspace @javelin/pack run build",
    "build:example:spin": "yarn workspace @javelin/spin run build",
    "start:example:spin": "yarn workspace @javelin/spin run start",
    "build:example:interop": "yarn workspace @javelin/interop run build",
    "start:example:interop": "yarn workspace @javelin/interop run start"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "version": "0.0.1"
}
